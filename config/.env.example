# CAMAI Configuration
# Copy to ../.env and customize

# ===================
# Camera
# ===================
RTSP_URL=rtsp://user:password@your-ip-camera-here:554/stream1
CAPTURE_WIDTH=640
CAPTURE_HEIGHT=480
TARGET_FPS=30

# ===================
# Detection
# ===================
MODEL_PATH=yolo11n.engine
CONFIDENCE=0.5
IOU_THRESHOLD=0.45

# ===================
# Events
# ===================
PERSON_DWELL_TIME=3.0
PERSON_COOLDOWN=30.0
VEHICLE_STOP_TIME=5.0

# ===================
# Notifications
# ===================
SAVE_SNAPSHOTS=true
SNAPSHOT_DIR=snapshots
LOG_DIR=logs

# MQTT (Home Assistant, etc.)
ENABLE_MQTT=false
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TOPIC=camai/events

# Discord
ENABLE_DISCORD=false
DISCORD_WEBHOOK=

# ===================
# Stream Output
# ===================
ENABLE_STREAM=true
STREAM_PORT=8080

# ===================
# PTZ Tracking (follows people only)
# ===================
ENABLE_PTZ=false
PTZ_HOST=camera-ip
PTZ_PORT=2020
PTZ_USERNAME=admin
PTZ_PASSWORD=your_password
PTZ_TRACK_SPEED=0.5
PTZ_DEADZONE=0.15
PTZ_RETURN_HOME=true
PTZ_HOME_DELAY=10.0

# ===================
# Debug
# ===================
DEBUG=false
